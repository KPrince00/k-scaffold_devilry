include ../components/_domainDetails.pug
article#domains.domains-header 
    include ../components/_domainsHeader.pug
    section#domains
        section#domains-innate.domains-row
            +domain('Innate Domain',1)
            +domain('Innate Domain',2)
            +domain('Innate Domain',3)
        section#domains-learned.domains-row
            +domain('Learned Domain',4)
            +domain('Learned Domain',5)
            +domain('Learned Domain',6)
        
+scss.
    .domains-row {
        display:grid;
        gap:var(--tiny-gap);
        grid-template-columns:repeat(3, 1fr);
        grid-auto-flow: column;
        align-items: start;
        justify-items: center;
        box-sizing: border-box;
        position: relative;
        padding-bottom: 0px;
        margin-bottom: 0px;
        height:34vh;
    }

    .domain-details {
        position: relative;
        width: 100%;
        height: 100%;
        max-height: 34vh;
        overflow-y: auto;
        overflow-x: clip;
        scrollbar-width: none;
    }

    .Domain1,.Domain4{
        input {
            border: 1px solid var(--bodyColorTertiary);
        }
    }
    .Domain2,.Domain5{
        input {
            border: 1px solid var(--mindColorTertiary);
        }
    }
    .Domain3,.Domain6{
        input {
            border: 1px solid var(--spiritColorTertiary);
        }
    }

    .Domain-1,.Domain-2,.Domain-3 {
        .repeating-controls-manual {
            .repcontrol-button--add {
                position: fixed;
                top: 198px;
                z-index: 3;
            }
        }
    }

    .Domain-4,.Domain-5,.Domain-6 {
        .repeating-controls-manual {
            .repcontrol-button--add {
                position: fixed;
                top: 413px;
                z-index: 3;
            }
        }
    }
